<%= form_for [@user, @post] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    
    <%= f.label :summary %>
    <%= f.text_field :summary, class: 'form-control', placeholder: "lorem ipsum" %>
    
    <%= f.label :content %><br> 
    <%= f.text_area(:content, size: '50x10') %>

    <%= f.label :title_image_url %>
    <%= f.text_field :title_image_url, class: 'form-control', placeholder: "lorem ipsum" %>

    <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>